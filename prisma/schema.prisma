generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}





model Folder {
  id          Int     @default(autoincrement()) @id
  title       String  @unique
  itemsCount Int @default(0) @map("items_count")
  rows        Row[]   

  @@map("folder")

}

model Row {
  id          Int     @default(autoincrement()) @id
  word        String
  translation String
  folder      Folder? @relation(fields: [folderId], references: [id])
  folderId    Int?

  @@map("row")
}