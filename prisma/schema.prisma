generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}





model Folder {
  id          Int     @default(autoincrement()) @id
  title       String  @unique
  itemsCount Int @default(0) @map("items_count")
  rows        Row[]   
  statistics Statistics[]

  @@map("folder")

}

model Row {
  id          Int     @default(autoincrement()) @id
  word        String  
  translation String  
  transcription String @default("empty")
  folder      Folder? @relation(fields: [folderId], references: [id])
  folderId    Int?  @map("folder_id")

  @@map("row")
}

model Statistics {
  id          Int     @default(autoincrement()) @id
  folder Folder? @relation(fields: [folderId], references: [id])
  sessions Int @default(0)
  presentOfCorrectUnswers Float @default(0.0) @map("present_of_correct_unswers")
  lastSession DateTime @map("last_session")
  createdWords Int @default(0) @map("created_words")
  deletedWords Int @default(0) @map("deleted_words")
  folderId Int?  @map("folder_id")

  @@map("statistics")
}

